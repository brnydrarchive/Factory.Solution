@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Engineer

<h2>Engineer Details</h2>
<br>



<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
@Html.ActionLink("Edit engineer", "Edit", new { id = Model.EngineerId})</p
@if(@Model.JoinEntities.Count == 0)
{
  <p>No machines have been assigned to this engineer.</p>
}
else
{
  <h4>Machines assigned to this Engineer: </h4>
  <ul>
  @foreach(EngineerMachine join in Model.JoinEntities)
  {
    <li>@join.Machine.Type</li>
    
  }
  </ul>
}



@if (hasMachines)
{
    <p>@Html.ActionLink("Add a Machine to this engineer", "AddMachine", new { id = Model.EngineerId })</p>
}
<p>@Html.ActionLink("Back to Engineer management", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>

