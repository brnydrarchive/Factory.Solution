@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h2>Machine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Type): @Html.DisplayFor(model => model.Type)</h3>
@Html.ActionLink("Edit machine", "Edit", new { id = Model.MachineId})</p

@if(@Model.JoinEntities.Count == 0)
{
  <p>No engineers are licensed to work on this machine type.</p>
}
else
{
  <h4>Engineers licensed to work on this machine: </h4>
  <ul>
  @foreach(EngineerMachine join in Model.JoinEntities)
  {
    <li>@join.Engineer.Name</li>
    
  
  }
  </ul>
}

<p>@Html.ActionLink("Assign to engineer", "AddEngineer", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Back to Machine management", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>

