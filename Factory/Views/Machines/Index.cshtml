@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Machines</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>No machines have been added to the database.</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Type}", "Details", new { id = machine.MachineId })</li>
}

<p>@Html.ActionLink("Add new machine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>