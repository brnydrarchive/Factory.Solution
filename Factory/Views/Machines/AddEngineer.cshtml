@{
  Layout = "_Layout";
}
@using Factory.Models
@model Factory.Models.Machine

<h2>Adding engineer to machine</h2>

<h4>Assigning to this machine: @Html.DisplayFor(model => model.Type)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to home", "Index")</p>